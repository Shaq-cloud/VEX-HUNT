  margin-left: 10px;
  padding: 12px 18px;
  border: none;
  background: #0b0c0c;
  color: #fff;
  border-radius: 10px;
  cursor: pointer;
}

================= JS =================

const chatToggle = document.getElementById('vexChatToggle');
const chatOverlay = document.getElementById('vexChatOverlay');
const chatClose = document.getElementById('vexChatClose');

chatToggle.addEventListener('click', () => {
  chatOverlay.classList.add('active');
});

chatClose.addEventListener('click', () => {
  chatOverlay.classList.remove('active');
});

// Prevent background scroll when chat is open
chatOverlay.addEventListener('transitionend', () => {
  document.body.style.overflow = chatOverlay.classList.contains('active')
    ? 'hidden'
    : 'auto';
});
